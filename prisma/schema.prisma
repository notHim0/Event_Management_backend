generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Roles{
  STUDENT
  PASSOUT
  FACULTY
}

model Role {
  id String @id @default(uuid())
  roleName    String @default("student")
  accessLevel Int    @default(1)
  // user        User[]
  clubs ClubRole[]
}

model Event {
  id              String    @id @default(uuid())
  name            String
  // rsvps User[]
  type            String
  venue           String
  club_id       String?
  club_organisers Club? @relation(fields: [club_id], references: [id])
  members         String?
  description     String
  thumbnail       String?
  timestamp       DateTime?
}

model User {
  collegeRegistrationID String  @id 
  firstName             String
  lastName              String?
  instituteName         String
  password              String
  degree                String
  course                String
  email                 String? @unique
  phone                 String? @unique
  // role                  Role?    @relation(fields: [roleName], references: [roleName])
  clubsAndRoles ClubRole[]
  role Roles?
  roleName              String
}

model Club {
  id String @id @default(uuid())
  name String @unique
  members String?
  description String
  events Event[]
  acheivements String?
  roles ClubRole[]
}

model ClubRole {
  clubId String
  club Club @relation(fields: [clubId], references: [id])

  roleId String
  role Role @relation(fields: [roleId], references: [id])

  userId String
  user User @relation(fields: [userId], references: [collegeRegistrationID])

  @@id([clubId, roleId])
}